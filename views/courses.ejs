<!DOCTYPE html>
<html>
<head>
    <title>Courses List</title>
    <link rel="stylesheet" type="text/css" href="css/courses.css">
    <link rel="stylesheet" type="text/css" href="css/navbar.css">
    <script src="https://www.gstatic.com/firebasejs/7.0.0/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/7.0.0/firebase-auth.js"></script>
    <script src="https://www.gstatic.com/firebasejs/7.0.0/firebase-database.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <script src = "js/firebaseAuth.js"></script>
</head>
<body>

<div class="nav">
    <ul>
        <li><a href="/" onclick="return userSignout()">SignOut</a></li>
        <li><a href="/addcourse">Add Course</a></li>
    </ul>
</div>

<div class="courbody">
    <% let i=0; %>
    <% Snapshot.forEach(function(key) {%>
    <a href="/quizlist/<%= key.key %>">
        <div class = "courses">
            <div class="image">
                <!--<img src="assets/Images/c1.jpg">-->
            </div>
            <div class= "name">
                <h1><%= courses[i].Name %></h1>
            </div>
            <div class="stats">
                <div class="stat">
                    <div class="value">
                        <i class="fa fa-users" aria-hidden="true"></i>
                        <%= Students[i] %>
                        Students
                    </div>
                </div>
            </div>
        </div>
        <% i++ %>
        <% })%>
    </a>
</div>

</body>

</html>